{
  "name": "mamaz-ai-venom-bot",
  "version": "1.0.0",
  "description": "Venom-bot integration for Mamaz AI WhatsApp assistant",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "nodemon bot.js",
    "prod": "NODE_ENV=production node bot.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs mamaz-ai-bot",
    "pm2:monit": "pm2 monit",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:prod": "docker-compose --profile prod up --build -d",
    "docker:stop": "docker-compose down",
    "health": "node healthcheck.js",
    "logs:clear": "rm -rf logs/*.log",
    "tokens:clear": "rm -rf tokens/*"
  },
  "dependencies": {
    "venom-bot": "^5.0.25",
    "puppeteer-core": "^22.0.0",
    "express": "^4.19.0",
    "cors": "^2.8.5",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "ai",
    "venom-bot",
    "supabase"
  ],
  "author": "Mamaz AI",
  "license": "MIT"
}
